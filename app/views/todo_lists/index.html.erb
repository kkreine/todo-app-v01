
<div class="card-header d-flex justify-content-between">
  <h5 class='m-0 text-dark'>
    To do Lists
  </h5>
  <%= link_to 'New To Do List', new_todo_list_path %>
</div>

<div class="card-body">
  <ul class="list-group">
    <% @todo_lists.each do |todo_list| %>
      <%= link_to todo_list, class: 'text-decoration-none' do %>
        <li class="list-group-item d-flex justify-content-between">
          <div>
            <h6 class='m-0 text-dark'>
              <b><%= todo_list.title %></b>
              <span class="badge badge-<%= todo_list.badge_color %>"><%= todo_list.status %> </span>
            </h6>
            <p class='text-secondary m-0'>
              <small>
              <%= todo_list.percent_complete %>% complete  
              (<%= todo_list.completed_items %>/<%= todo_list.total_items %>)
              </small>
            </p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>